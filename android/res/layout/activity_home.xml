<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="20dp"
	tools:context="com.madrassa.HomeActivity"
	>
	<TextView 
		android:id="@+id/text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="You are currently registered for 0 courses"
		android:textSize="20sp"
		/>
	<Button 
		android:id="@+id/button_view_courses"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:text="@string/button_view_course_list"
		android:onClick="openCourseListActivity"
		android:background="@color/colorPrimary"
		android:textColor="@android:color/white"
		/>	
		
</LinearLayout>