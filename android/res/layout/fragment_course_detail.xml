<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.madrassa.CourseDetailFragment"
	android:padding="20dp"
	>
	
	<TextView 
		android:id="@+id/course_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Title"
		android:textSize="25sp"
		app:layout_constraintLeft_toLeftOf="parent"
		/>

	<TextView 
		android:id="@+id/course_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Description"
		android:textSize="20sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/course_title"
		/>

	<TextView 
		android:id="@+id/header_registered_students"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/header_registered_students"
		android:textSize="20sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/course_description"
		/>
	<android.support.v7.widget.RecyclerView 
		android:id="@+id/recycler_view"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/header_registered_students"
		app:layout_constraintBottom_toTopOf="@+id/button_course"
		/>
		
	<Button 
		android:id="@+id/button_course"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/join_course"
		android:background="@color/colorPrimary"
		android:textColor="@android:color/white"
		android:padding="5dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		/>
</android.support.constraint.ConstraintLayout>