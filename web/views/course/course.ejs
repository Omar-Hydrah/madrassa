<% include ../partials/header.ejs %>

<% if(course != null && displayJoinLink != null){ %>
	<h3><%= course.title %> (<%= course.year %>)- by <%= course.teacher %></h3>

	<% if(displayJoinLink){ %>
		<a href="/course/<%= course.id %>/join-course">Join course</a>
			
	<% }else if(displayLeaveLink){ %>
		<a href="/course/<%= course.id %>/leave-course">Leave Course</a>
	<% } %>
	<p>Description:</p>
	<p><%= course.description %></p>


	<% if(students != null){ %>
		<hr style="width:20%;float:left;" />
		<br />
		<p>Registered Students:</p>
		<ul>
		<% for(var i = 0; i < students.length; i++){ %>
			<li><%= students[i].name %></li>
		<% } %>
		</ul>
	<% } %>
<% } %>

<% if(message != null){ %>
	<p style="color:red;"><%= message %></p>
<% } %>

<% include ../partials/footer.ejs %>